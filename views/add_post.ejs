<%- include("partials/header"); -%>

<main>
    <div class="container" style="margin-top: 1rem; min-height: 100vh;">
        <div class="col-sm-6 col-sm-offset-3">
         <h2>Add a new post</h2>
      
         <form action="/add_post" method="post" enctype="multipart/form-data">
          <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" name="title" required>
          </div>
          <div class="form-group">
            <label for="image">Thumbnail image</label><br>
            <input type="file" accept="image/*" name="image">
          </div>
          <div class="form-group">
           <label>Image title</label>
           <input type="text" class="form-control" name="img_alt">
          </div>
          <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" rows="10" name="content" required></textarea>
          </div>
      
          <button type="submit" class="btn btn-primary" style="margin-top: 1rem;">Add</button>
         </form>
      
         <hr>
      
         <p>Go Back <a href="/">Home</a>.</p>
        </div>
    </div>

</main>

 <%- include("partials/footer"); -%>