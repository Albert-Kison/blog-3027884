<%- include("partials/header"); -%>
 <div class="container" style="margin-top: 1rem; min-height: 100vh;">
  <div class="col-sm-6 col-sm-offset-3">
   <h2>Edit</h2>

   <form action="/edit_user/<%= user.user_id %>" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="<%= user.name %>">
    </div>
    <div class="form-group">
     <label>Email</label>
     <input type="text" class="form-control" name="email" value="<%= user.email %>">
    </div>
    <div class="form-group">
     <label>Password</label>
     <input type="text" class="form-control" name="password">
    </div>
    <div class="form-check">
        <% if (user.status === "user") { %>
            <input class="form-check-input" type="radio" name="user_status" value="user" checked>
        <% } else { %>
            <input class="form-check-input" type="radio" name="user_status" value="user">
        <% } %>
        <label class="form-check-label" for="flexRadioDefault1">
          user
        </label>
      </div>
      <div class="form-check">
        <% if (user.status === "admin") { %>
            <input class="form-check-input" type="radio" name="user_status" value="admin" checked>
        <% } else { %>
            <input class="form-check-input" type="radio" name="user_status" value="admin" checked>
        <% } %>
        <label class="form-check-label" for="flexRadioDefault2">
          admin
        </label>
      </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 1rem;">Submit</button>
   </form>

   <hr>

   <p>Go Back <a href="/">Home</a>.</p>
  </div>
 </div>
 <%- include("partials/footer"); -%>